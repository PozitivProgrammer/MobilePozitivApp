<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="MyTheme" parent="MyTheme.Base">
    
  </style>

  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>

    <item name="colorButtonNormal">@color/colorPrimary</item>
    <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    
    <item name="colorControlActivated">@color/colorPrimary</item>
    <item name="colorControlHighlight">@color/colorPrimary</item>

  </style>

  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">

    <item name="color">#F5F5F5</item>
    <item name="spinBars">true</item>

  </style>

    <style name="TabLayoutThemes" parent="Widget.Design.TabLayout">
      
      <item name="tabIndicatorColor">#FFFFFF</item>
      <item name="tabIndicatorHeight">2dp</item>
      <item name="tabSelectedTextColor">#212121</item> 
      
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
      
      <item name="android:windowBackground">@drawable/background_splash</item>
      
    </style>

</resources>